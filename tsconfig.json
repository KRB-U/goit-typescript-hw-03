{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    // "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["dom", "ES2021"],
    "module": "es2020",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "es2019",
    "sourceMap": true,
    //new
    "allowJs": true,
    "preserveConstEnums": true,
    "strict": true,
    "moduleResolution": "node10"
  },
  "include": ["**/*.ts"],
  // new
  "exclude": ["./node_modules"]
}
